using System.Collections.Generic;
using System.Data;
using System.Data.SqlClient;
using QUANLYCOFFEESHOP.DTO;

namespace QUANLYCOFFEESHOP.DAL
{
    public class LoaiSanPhamDAL
    {
        public List<LoaiSanPhamDTO> GetAll()
        {
            List<LoaiSanPhamDTO> list = new List<LoaiSanPhamDTO>();

            string query = "SELECT * FROM LoaiSanPham";
            DataTable dt = DatabaseHelper.ExecuteQuery(query);

            foreach (DataRow row in dt.Rows)
            {
                LoaiSanPhamDTO loai = new LoaiSanPhamDTO
                {
                    MaLoai = row["MaLoai"].ToString(),
                    TenLoai = row["TenLoai"].ToString(),
                    MoTa = row["MoTa"].ToString()
                };
                list.Add(loai);
            }

            return list;
        }

        public LoaiSanPhamDTO GetByID(string maLoai)
        {
            string query = "SELECT * FROM LoaiSanPham WHERE MaLoai = @MaLoai";
            SqlParameter[] parameters = {
                new SqlParameter("@MaLoai", maLoai)
            };

            DataTable dt = DatabaseHelper.ExecuteQuery(query, parameters);

            if (dt.Rows.Count > 0)
            {
                DataRow row = dt.Rows[0];
                return new LoaiSanPhamDTO
                {
                    MaLoai = row["MaLoai"].ToString(),
                    TenLoai = row["TenLoai"].ToString(),
                    MoTa = row["MoTa"].ToString()
                };
            }

            return null;
        }

        public bool Insert(LoaiSanPhamDTO loaiSanPham)
        {
            try
            {
                string query = "INSERT INTO LoaiSanPham (MaLoai, TenLoai, MoTa) VALUES (@MaLoai, @TenLoai, @MoTa)";

                SqlParameter[] parameters = {
                    new SqlParameter("@MaLoai", loaiSanPham.MaLoai),
                    new SqlParameter("@TenLoai", loaiSanPham.TenLoai),
                    new SqlParameter("@MoTa", loaiSanPham.MoTa)
                };

                int result = DatabaseHelper.ExecuteNonQuery(query, parameters);
                return result > 0;
            }
            catch
            {
                return false;
            }
        }

        public bool Update(LoaiSanPhamDTO loaiSanPham)
        {
            try
            {
                string query = "UPDATE LoaiSanPham SET TenLoai = @TenLoai, MoTa = @MoTa WHERE MaLoai = @MaLoai";

                SqlParameter[] parameters = {
                    new SqlParameter("@MaLoai", loaiSanPham.MaLoai),
                    new SqlParameter("@TenLoai", loaiSanPham.TenLoai),
                    new SqlParameter("@MoTa", loaiSanPham.MoTa)
                };

                int result = DatabaseHelper.ExecuteNonQuery(query, parameters);
                return result > 0;
            }
            catch
            {
                return false;
            }
        }

        public bool Delete(string maLoai)
        {
            try
            {
                string query = "DELETE FROM LoaiSanPham WHERE MaLoai = @MaLoai";
                SqlParameter[] parameters = {
                    new SqlParameter("@MaLoai", maLoai)
                };

                int result = DatabaseHelper.ExecuteNonQuery(query, parameters);
                return result > 0;
            }
            catch
            {
                return false;
            }
        }
    }
}
